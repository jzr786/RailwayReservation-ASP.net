@model IEnumerable<RailwayReservation.Models.Station>

@{
    ViewData["Title"] = "Stations List";
}

<h2>Stations List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Station</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Division</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var station in Model)
        {
            <tr>
                <td>@station.Code</td>
                <td>@station.Name</td>
                <td>@station.Division</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@station.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@station.Id" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@station.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

