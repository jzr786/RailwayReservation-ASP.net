@model RailwayReservation.Models.Reservation

@{
    ViewData["Title"] = "Create Reservation";
}

<h2>Create Reservation</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>PRN</label>
        <input asp-for="PRN" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Train</label>
        <select asp-for="TrainNo" class="form-control">
            @foreach (var train in ViewBag.Trains)
            {
                <option value="@train.TrainNo">@train.TrainNo - @train.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>From Station</label>
        <select asp-for="FromStationId" class="form-control">
            @foreach (var station in ViewBag.Stations)
            {
                <option value="@station.Id">@station.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>To Station</label>
        <select asp-for="ToStationId" class="form-control">
            @foreach (var station in ViewBag.Stations)
            {
                <option value="@station.Id">@station.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Journey Date</label>
        <input type="date" asp-for="JourneyDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Seat No</label>
        <input asp-for="SeatNo" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Coach No</label>
        <input asp-for="CoachNo" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Fare</label>
        <input asp-for="Fare" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Book Ticket</button>
</form>

