@model RailwayReservation.Models.Reservation

<h2>Reservation Confirmation</h2>

<div>
    <p><strong>Reservation ID:</strong> @Model.Id</p>
    <p><strong>Train:</strong> @Model.TrainSchedule.Train.Name</p>
    <p><strong>From Station:</strong> @Model.FromStation.Name</p>
    <p><strong>To Station:</strong> @Model.ToStation.Name</p>
    <p><strong>Number of Seats:</strong> @Model.NumberOfSeats</p>
    <p><strong>Reservation Time:</strong> @Model.ReservationTime</p>
    <p><strong>Seat Type:</strong> @Model.SeatType</p>
    <p><strong>Total Fare:</strong> @Model.TotalFare.ToString("C")</p>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">View All Reservations</a>
    <a asp-action="PrintTicket" asp-route-id="@Model.Id" class="btn btn-outline-success">Download Ticket as PDF</a>
</div>