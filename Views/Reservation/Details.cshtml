@model RailwayReservation.Models.Reservation

@{
    ViewData["Title"] = "Reservation Details";
}

<h2>Reservation Details</h2>

<ul>
    <li><strong>PRN:</strong> @Model.PRN</li>
    <li><strong>Passenger:</strong> @Model.User.UserName</li>
    <li><strong>Train:</strong> @Model.Train.TrainNo - @Model.Train.Name</li>
    <li><strong>From:</strong> @Model.FromStation.Name</li>
    <li><strong>To:</strong> @Model.ToStation.Name</li>
    <li><strong>Journey Date:</strong> @Model.JourneyDate.ToShortDateString()</li>
    <li><strong>Seat:</strong> @Model.SeatNo (@Model.CoachNo)</li>
    <li><strong>Fare:</strong> ₹@Model.Fare</li>
</ul>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

