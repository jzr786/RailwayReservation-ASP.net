@model RailwayReservation.Models.Cancellation

@{
    ViewData["Title"] = "Add Cancellation";
}

<h2>Add Cancellation</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>PRN</label>
        <input asp-for="PRN" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Cancellation Date</label>
        <input asp-for="CancellationDate" type="datetime-local" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Refund Amount</label>
        <input asp-for="RefundAmount" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

