@model RailwayReservation.Models.Train

@{
    ViewData["Title"] = "Add Train";
}

<h2>Add Train</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Train Number</label>
        <input asp-for="TrainNo" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Direction</label>
        <select asp-for="IsUp" class="form-control">
            <option value="true">Up</option>
            <option value="false">Down</option>
        </select>
    </div>

    <div class="form-group">
        <label>Total Coaches</label>
        <input asp-for="TotalCoaches" class="form-control" required />
    </div>

    <div class="form-group">
        <label>AC1 Seats</label>
        <input asp-for="Ac1Seats" class="form-control" required />
    </div>

    <div class="form-group">
        <label>AC3 Seats</label>
        <input asp-for="Ac3Seats" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Sleeper Seats</label>
        <input asp-for="SleeperSeats" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

