@model RailwayReservation.Models.Train

@{
    ViewData["Title"] = "Delete Train";
}

<h2>Are you sure you want to delete this train?</h2>

<div>
    <h4>Train Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Train No</dt>
        <dd class="col-sm-10">@Model.TrainNo</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Direction</dt>
        <dd class="col-sm-10">@(Model.IsUp ? "Up" : "Down")</dd>

        <dt class="col-sm-2">Total Coaches</dt>
        <dd class="col-sm-10">@Model.TotalCoaches</dd>

        <dt class="col-sm-2">AC1 Seats</dt>
        <dd class="col-sm-10">@Model.Ac1Seats</dd>

        <dt class="col-sm-2">AC3 Seats</dt>
        <dd class="col-sm-10">@Model.Ac3Seats</dd>

        <dt class="col-sm-2">Sleeper Seats</dt>
        <dd class="col-sm-10">@Model.SleeperSeats</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TrainNo" />
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>

