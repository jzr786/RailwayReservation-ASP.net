@model RailwayReservation.Models.TrainSchedule

<h2>Edit Train Schedule</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Train</label>
        <select asp-for="TrainNo" asp-items="@(ViewData["TrainNo"] as SelectList)" class="form-control">
            <option value="">-- Select Train --</option>
        </select>
        <span asp-validation-for="TrainNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>From Station</label>
        <select asp-for="FromStationId" asp-items="@(ViewData["FromStationId"] as SelectList)" class="form-control">
            <option value="">-- Select From Station --</option>
        </select>
        <span asp-validation-for="FromStationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>To Station</label>
        <select asp-for="ToStationId" asp-items="@(ViewData["ToStationId"] as SelectList)" class="form-control">
            <option value="">-- Select To Station --</option>
        </select>
        <span asp-validation-for="ToStationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Departure Time</label>
        <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Arrival Time</label>
        <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>

    
    <div class="form-group">
        <label>Distance (in kilometers)</label>
        <input asp-for="Distance" class="form-control" />
        <span asp-validation-for="Distance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>AC1 Seats</label>
        <input asp-for="AC1Seats" class="form-control" />
        <span asp-validation-for="AC1Seats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>AC1 Fare Per Km</label>
        <input asp-for="AC1FarePerKm" class="form-control" />
        <span asp-validation-for="AC1FarePerKm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>AC3 Seats</label>
        <input asp-for="AC3Seats" class="form-control" />
        <span asp-validation-for="AC3Seats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>AC3 Fare Per Km</label>
        <input asp-for="AC3FarePerKm" class="form-control" />
        <span asp-validation-for="AC3FarePerKm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Sleeper Seats</label>
        <input asp-for="SleeperSeats" class="form-control" />
        <span asp-validation-for="SleeperSeats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Sleeper Fare Per Km</label>
        <input asp-for="SleeperFarePerKm" class="form-control" />
        <span asp-validation-for="SleeperFarePerKm" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}