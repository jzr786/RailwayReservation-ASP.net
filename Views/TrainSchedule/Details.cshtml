@model RailwayReservation.Models.TrainSchedule

<h2>Train Schedule Details</h2>

<div>
    <h4>Train Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Train No</dt>
        <dd class="col-sm-10">@Model.TrainNo</dd>

        <dt class="col-sm-2">From Station</dt>
        <dd class="col-sm-10">@Model.FromStation.Name</dd>

        <dt class="col-sm-2">To Station</dt>
        <dd class="col-sm-10">@Model.ToStation.Name</dd>

        <dt class="col-sm-2">Departure Time</dt>
        <dd class="col-sm-10">@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Arrival Time</dt>
        <dd class="col-sm-10">@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">AC1 Seats</dt>
        <dd class="col-sm-10">@Model.AC1Seats</dd>

        <dt class="col-sm-2">AC3 Seats</dt>
        <dd class="col-sm-10">@Model.AC3Seats</dd>

        <dt class="col-sm-2">Sleeper Seats</dt>
        <dd class="col-sm-10">@Model.SleeperSeats</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>