@model RailwayReservation.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="text-center text-lg-start">
  <div class="card mb-3">
    <div class="row g-0 d-flex align-items-center">
      <div class="col-lg-4 d-none d-lg-flex">
                <img src="https://img.freepik.com/free-photo/vertical-shot-railway-station-with-train-sunrise_181624-13413.jpg" alt="Trendy Pants and Shoes"
          class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
      </div>
      <div class="col-lg-8">
        <div class="card-body py-5 px-md-5">
                    <h2 class="fw-bold mb-5">Please Sign In to book reservations.</h2>
          <form asp-action="Login" method="post">
            
            <div class="form-outline mb-4">
              <input asp-for="UserName" class="form-control" />
              <label class="form-label" asp-for="UserName">Username</label>
              <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            
            <div class="form-outline mb-4">
              <input asp-for="Password" type="password" class="form-control" />
              <label class="form-label" asp-for="Password">Password</label>
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>

           
            <button type="submit" class="btn btn-secondary btn-block mb-4">Sign in</button>
          </form>

          
          <p class="text-center">
            Don't have an account? <a asp-action="Register">Register</a>
          </p>

        </div>
      </div>
    </div>
  </div>
</section>


