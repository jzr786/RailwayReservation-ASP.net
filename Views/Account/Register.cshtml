@model RailwayReservation.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<section class="text-center text-lg-start">

   
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right bg-body-tertiary" style="
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Register Yourself</h2>
                        <form asp-action="Register" method="post">
                            
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="FullName" class="form-control" />
                                        <label class="form-label" asp-for="FullName">Full Name</label>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="UserName" class="form-control" />
                                        <label class="form-label" asp-for="UserName">Username</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            
                            <div class="form-outline mb-4">
                                <input asp-for="Email" class="form-control" />
                                <label class="form-label" asp-for="Email">Email address</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            
                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" class="form-control" />
                                <label class="form-label" asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            
                            <div class="form-outline mb-4">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            
                            <div class="form-outline mb-4">
                                <select asp-for="Role" asp-items="ViewBag.Roles" class="form-control"></select>
                                <label class="form-label" asp-for="Role">Select your Role</label>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>

                            
                            <button type="submit" class="btn btn-secondary btn-block mb-4">
                                Sign up
                            </button>

                        </form>

                        
                        <p class="mt-3">
                            Already have an account? <a asp-action="Login">Login</a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="https://img.freepik.com/free-photo/vertical-shot-railway-station-with-train-sunrise_181624-13413.jpg" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>
    
</section>
